{
  "name": "@jamsrui/repo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "build-packages": "turbo build --filter='@jamsrui*'",
    "publish-packages": "turbo build --filter='@jamsrui*' && changeset && changeset version && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "turbo": "^2.5.2",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@10.6.2",
  "engines": {
    "node": ">=18"
  }
}